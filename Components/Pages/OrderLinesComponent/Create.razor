@inherits CreateBase

<MudDialog >
  <DialogContent >
    <MudForm Model="CurrentOrder" @ref="@_form">
      <MudGrid>
        <MudItem xs="16" sm="10" md="6">
          <MudTextField Label="Product Code" @bind-Value="CurrentOrder.ProductCode"></MudTextField>
        </MudItem>
        <MudItem xs="16" sm="10" md="6">
          <MudSelect @bind-Value="CurrentOrder.ProductType" Label="Product Type">
            @foreach (ProductType productType in Enum.GetValues(typeof(ProductType)))
            {
            <MudSelectItem Value="@productType">@productType</MudSelectItem>
            }
          </MudSelect>
        </MudItem>
        <MudItem xs="16" sm="10" md="6">
          <MudNumericField Label="Product Cost Price" @bind-Value="CurrentOrder.ProductCostPrice"></MudNumericField>
        </MudItem>
        <MudItem xs="16" sm="10" md="6">
          <MudNumericField Label="Product Sales Price" @bind-Value="CurrentOrder.ProductSalesPrice"></MudNumericField>
        </MudItem>
        <MudItem xs="16" sm="10" md="6">
          <MudNumericField Label="Quantity" @bind-Value="CurrentOrder.Quantity"></MudNumericField>
        </MudItem>
       
      </MudGrid>
    </MudForm>
  

  </DialogContent>
  <DialogActions>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="HandleSubmit">Submit</MudButton>
    <MudButton OnClick="Cancel">Cancel</MudButton>
  </DialogActions>
</MudDialog>